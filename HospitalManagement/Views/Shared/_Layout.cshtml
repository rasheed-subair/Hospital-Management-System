<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        <link rel="stylesheet" href="~/Content/Site.css" />
        <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    </head>


    <body class="landing">
        <div class="jumbotron-fluid bg-danger p-1 text-light text-center">
            <i class="fas fa-exclamation-triangle"></i> Coronavirus Alert. Please follow all COVID-19 Safety measures. For more info, please visit ncdc.gov.ng <i class="fas fa-exclamation-triangle"></i>
        </div>
        <!-- Header -->
        <header id="header" class="alt">
            <h3><strong><a href="/Home/Index"><i class="far fa-hospital"></i> Sekhmet</a></strong> General Hospital</h3>
            <nav id="nav">
                <ul>
                    <li><a href="/Home/Index" class="text-secondary">Home</a></li>
                    <li><a href="/Home/About" class="text-secondary">About</a></li>
                    <li><a href="/Home/Contact" class="text-secondary">Contact</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-secondary" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Staff portal
                        </a>
                        <div class="dropdown-menu bg-secondary text-center" style="line-height: 30px; border-radius: 2px; box-shadow: 3px 5px 2px rgba(0,0,0,0.2), -3px 5px 2px rgba(0,0,0,0.2);" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item text-light" href="/Admin/Login">Admin</a>
                            <a class="dropdown-item text-light" href="/Doctor/Login">Doctor</a>
                            <a class="dropdown-item text-light" href="/Nurse/Login">Nurse</a>
                            <a class="dropdown-item text-light" href="/Pharmacist/Login">Pharmacist</a>
                            <a class="dropdown-item text-light" href="/LabTech/Login">Laboratorist</a>
                            <a class="dropdown-item text-light" href="/Accountant/Login">Accountant</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </header>

        <a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

        @RenderBody()

        <!-- Footer -->
        <footer id="footer">
            <div class="container">
                <ul class="icons">
                    <li><a href="#" class="text-secondary" style="font-size: 1.5em;"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#" class="text-secondary" style="font-size: 1.5em;"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#" class="text-secondary" style="font-size: 1.5em;"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="#" class="text-secondary" style="font-size: 1.5em;"><i class="fab fa-linkedin-in"></i></a></li>
                </ul>
                <ul class="copyright">
                    <li>&copy; Sekhmet General Hospital Nig.</li>
                    <li>Developer: <a href="https://github.com/rasheed-subair">Abdulrasheed Subair</a></li>
                </ul>
            </div>
        </footer>

        <div id="myfloat" style="position: fixed; bottom: 40px; right: 40px; height: 30px; width: 30px; border-radius: 50%;">
            <div align="center" style="font-size: 2em;">
                <a href="#header"><i class="far fa-arrow-alt-circle-up text-danger"></i></a>
                
            </div>
        </div>
        <!-- Scripts -->
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/js/skel.min.js"></script>
        <script src="assets/js/util.js"></script>
        <script src="assets/js/main.js"></script>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

    </body>
</html>
