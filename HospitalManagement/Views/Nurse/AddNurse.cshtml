@model HospitalManagement.Models.Nurse

@{
    ViewBag.Title = "AddNurse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-3">
    <h4 class="mb-3 text-secondary">Add a new nurse</h4>
    <a href="NurseList" class="btn btn-outline-secondary mb-3"><i class="fas fa-chevron-left"></i> To list</a>
</div>

