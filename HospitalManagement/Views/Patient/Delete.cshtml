@model HospitalManagement.Models.Patient

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-3">
    <a href="/Patient/Index" class="btn btn-outline-secondary mb-3"><i class="fas fa-chevron-left"></i> To list</a>
</div>

<hr />

<h3>Are you sure you want to delete this?</h3>
<div>

    <table class="table-hover">
        <tr>
            <td>@Html.DisplayNameFor(model => model.FirstName)</td>
            <td>@Html.DisplayFor(model => model.FirstName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.LastName)</td>
            <td>@Html.DisplayFor(model => model.LastName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Phone)</td>
            <td>@Html.DisplayFor(model => model.Phone)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.DOB)</td>
            <td>@Html.DisplayFor(model => model.DOB)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Photograph)</td>
            <td><img src="~/Content/images/@Model.Photograph" width="150" height="200" alt="Photo" style="border: 1px dashed gray; border-radius: 6px; padding: 6px;" /></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ECName)</td>
            <td>@Html.DisplayFor(model => model.ECName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.ECPhone)</td>
            <td>@Html.DisplayFor(model => model.ECPhone)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        </div>
    }
</div>
