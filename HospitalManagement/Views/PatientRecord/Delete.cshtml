@model HospitalManagement.Models.PatientRecord

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-3">
    <a href="/PatientRecord/Index" class="btn btn-outline-secondary mb-3"><i class="fas fa-chevron-left"></i> To list</a>
</div>

<h3>Are you sure you want to delete this?</h3>

<div style="font-size: 1.2em;">
    <hr />
    <table class="table-hover">
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Doctor.Name)</b></td>
            <td>@Html.DisplayFor(model => model.Doctor.Name)</td>
        </tr>
        <tr>
            <td><b>Patient Name</b></td>
            <td>@Html.DisplayFor(model => model.Patient.FirstName) @Html.DisplayFor(model => model.Patient.LastName)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Complaint)</b></td>
            <td>@Html.DisplayFor(model => model.Complaint)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.TimIn)</b></td>
            <td>@Html.DisplayFor(model => model.TimIn)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.CommentsDoctor)</b></td>
            <td>@Html.DisplayFor(model => model.CommentsDoctor)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        </div>
    }
</div>
