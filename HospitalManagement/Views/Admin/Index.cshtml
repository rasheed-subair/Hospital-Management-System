@model IEnumerable<HospitalManagement.Models.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <a href="Create" class="btn btn-outline-primary mb-3"><i class="far fa-plus-square"></i> Add Admin</a>
    <hr />
    <h4 class="mb-3 text-secondary">Administrative staff</h4>
</div>

<div class="container" align="right">
    @using (Html.BeginForm())
    {
        @Html.TextBox("SearchString", null, new { @class = "form-control col-md-4 mb-2", placeholder = "Search by name" })
        <input type="submit" value="Search" class="btn btn-outline-info mb-3" />
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.AdminId }, new { @class = "btn btn-primary btn-sm mb-2" })
            @Html.ActionLink("Delete", "Delete", new { id=item.AdminId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
