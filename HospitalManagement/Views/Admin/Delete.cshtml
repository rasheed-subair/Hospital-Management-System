@model HospitalManagement.Models.Admin

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mx-3">
    <a href="Index" class="btn btn-outline-secondary mb-3"><i class="fas fa-chevron-left"></i> To list</a>
</div>

<hr />

<h3>Are you sure you want to delete this?</h3>
<div style="font-size: 1.2em;">
    <hr />
    <table class="table-hover">
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Name)</b></td>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Email)</b></td>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Phone)</b></td>
            <td>@Html.DisplayFor(model => model.Phone)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Address)</b></td>
            <td>@Html.DisplayFor(model => model.Address)</td>
        </tr>
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        </div>
    }
</div>
