@model HospitalManagement.Models.Medication

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_PharmacistLayout.cshtml";
}

<div class="container mx-3">
    <a href="/Medication/Index" class="btn btn-outline-secondary mb-3"><i class="fas fa-chevron-left"></i> To list</a>
</div>

<hr />

<h3>Are you sure you want to delete this?</h3>
<div style="font-size: 1.2em;">
    <h4>Medication</h4>
    <hr />
    <table class="table-hover">
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.DrugName)</b></td>
            <td>@Html.DisplayFor(model => model.DrugName)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.BrandName)</b></td>
            <td>@Html.DisplayFor(model => model.BrandName)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.DrugDescription)</b></td>
            <td>@Html.DisplayFor(model => model.DrugDescription)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.DrugPrice)</b></td>
            <td>@Html.DisplayFor(model => model.DrugPrice)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Quantity)</b></td>
            <td>@Html.DisplayFor(model => model.Quantity)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Category)</b></td>
            <td>@Html.DisplayFor(model => model.Category)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.ExpDate)</b></td>
            <td>@Html.DisplayFor(model => model.ExpDate)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger my-4 w-25" />
        </div>
    }
</div>
