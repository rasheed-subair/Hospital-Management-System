@model IEnumerable<HospitalManagement.Models.Medication>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PharmacistLayout.cshtml";
}

<div>
    <a href="/Medication/Create" class="btn btn-outline-primary mb-3"><i class="far fa-plus-square"></i> Add Medication</a>
    <hr />
    <h4 class="mb-3 text-secondary text-center">Medication</h4>
</div>

<div class="container" align="right">
    @using (Html.BeginForm())
    {
        @Html.TextBox("SearchString", null, new { @class = "form-control col-md-4 mb-2", placeholder = "Search by name or category" })
        <input type="submit" value="Search" class="btn btn-outline-info mb-3" />
    }
</div>

<table class="table table-hover">
    <tr class="bg-light">
        <th>
            @Html.DisplayNameFor(model => model.DrugName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DrugPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DrugName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                ₦@Html.DisplayFor(modelItem => item.DrugPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MedicationId }, new { @class = "btn btn-success btn-sm" })
                @Html.ActionLink("Details", "Details", new { id = item.MedicationId }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Delete", "Delete", new { id = item.MedicationId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
