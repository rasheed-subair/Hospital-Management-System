@model IEnumerable<HospitalManagement.Models.Newsletter>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Newsletter Subscriptions</h2>

<table class="table table-hover">
    <tr class="bg-light">
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.NewsletterId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
