@model IEnumerable<HospitalManagement.Models.Appointment>

@{
    if (Session["AdminId"] != null)
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    if (Session["DoctorId"] != null)
    {
        Layout = "~/Views/Shared/_DoctorLayout.cshtml";
    }
}

<div>
    <h4 class="mb-3 text-secondary text-center">Patient Appointments</h4>
</div>

<div class="container" align="right">
    @using (Html.BeginForm())
    {
        @Html.TextBox("SearchString", null, new { @class = "form-control col-md-4 mb-2", placeholder = "Search by name" })
        <input type="submit" value="Search" class="btn btn-outline-info mb-3" />
    }
</div>

<table class="table table-hover">
    <tr class="bg-light">
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppointmentTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppointmentTime)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.AppointmentId }, new { @class = "btn btn-primary btn-sm mb-2" })
            @Html.ActionLink("Delete", "Delete", new { id=item.AppointmentId }, new { @class = "btn btn-danger btn-sm mb-2" })
        </td>
    </tr>
}

</table>
